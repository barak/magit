Subject: Remove dependency on dash elpa package

Currently, in Debian dash-el is not plugged into the elpa package
system.
---
 Makefile            | 7 ++-----
 lisp/git-commit.el  | 2 +-
 lisp/magit-popup.el | 2 +-
 lisp/magit.el       | 2 +-
 lisp/with-editor.el | 2 +-
 5 files changed, 6 insertions(+), 9 deletions(-)

Index: magit/Makefile
===================================================================
--- magit.orig/Makefile	2015-10-30 12:44:12.190044009 +0100
+++ magit/Makefile	2015-10-30 12:44:12.186043979 +0100
@@ -165,8 +165,7 @@
 define with_editor_pkg
 (define-package "with-editor" "$(VERSION)"
   "Use the Emacsclient as $$EDITOR"
-  '((emacs "$(EMACS_VERSION)")
-    (dash "$(DASH_VERSION)")))
+  '((emacs "$(EMACS_VERSION)")))
 endef
 # '
 export with_editor_pkg
@@ -189,8 +188,7 @@
 define magit_popup_pkg
 (define-package "magit-popup" "$(VERSION)"
   "Define prefix-infix-suffix command combos"
-  '((emacs "$(EMACS_VERSION)")
-    (dash "$(DASH_VERSION)")))
+  '((emacs "$(EMACS_VERSION)")))
 endef
 # '
 export magit_popup_pkg
@@ -212,7 +210,6 @@
 (define-package "magit" "$(VERSION)"
   "A Git porcelain inside Emacs"
   '((emacs "$(EMACS_VERSION)")
-    (dash "$(DASH_VERSION)")
     (with-editor "$(VERSION)")
     (git-commit "$(VERSION)")
     (magit-popup "$(VERSION)")))
