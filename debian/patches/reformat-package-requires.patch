-;;     (seq "2.24"))
+;; Package-Requires: ((emacs "26.1") (compat "30.0.0.0") (dash "2.19.1") (seq "2.24"))
 
 ;; SPDX-License-Identifier: GPL-3.0-or-later
 
diff --git a/lisp/magit.el b/lisp/magit.el
index 8a7696f..a169d91 100644
