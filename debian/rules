#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	dh_auto_install
	mkdir -p $(CURDIR)/debian/magit/usr/share/emacs/site-lisp/magit
	mv $(CURDIR)/debian/magit/usr/share/emacs/site-lisp/magit.el $(CURDIR)/debian/magit/usr/share/emacs/site-lisp/magit
	rm -f debian/magit/usr/share/emacs/site-lisp/magit.elc
	rm -f debian/magit/usr/share/info/dir

override_dh_installchangelogs:
	dh_installchangelogs NEWS
